
<div class="container">

  <h2>Edit <%= resource_name.to_s.humanize %></h2>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="col-md-4">

      <div class="list-group">
        <a href="#" class="list-group-item personal active">Personal Details</a>
        <a href="#" class="list-group-item social">Social Details</a>
        <a href="#" class="list-group-item password">Change Password</a>
      </div>

    </div>

    <div class="col-md-8 contain">

      <div id="personal" class="well">
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name%>
        </div>

        <div class="field">
          <%= f.label :passoutyear %><br />
          <%= f.text_field :passoutyear %>
        </div>

        <div class="field">
          <%= f.label :department %><br />
          <%= f.text_field :department %>
        </div>
        <div class="field">
          <%= f.label :hall %><br />
          <%= f.text_field :hall %>
        </div>
        <div class="field">
          <%= f.label :firm %><br />
          <%= f.text_field :firm %>
        </div>
        <div class="field">
          <%= f.label :designation %><br />
          <%= f.text_field :designation %>
        </div>

         <div class="field">
          <%= f.label :phone %><br />
          <%= f.text_field :phone %>
        </div>
      </div><!--Personal ended -->

      <div id="social" class="well hidden">
        <div class="field">
          <%= f.label "Facebook (Profile URL)" %><br />
          <%= f.text_field :facebook %>
        </div>

        <div class="field">
          <%= f.label :twitter_username %><br />
          <%= f.text_field :twitter %>
        </div>

        <div class="field">
          <%= f.label "LinkedIn Public Profile URL" %><br />
          <%= f.text_field :linkedin %>
        </div>

        <div class="field">
          <%= f.label :skypename %><br />
          <%= f.text_field :skypename %>
        </div>
      </div><!--Social ended -->

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

      <div id="password" class="well hidden">
        <div class="field">
          <%= f.label :new_password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="field">
          <%= f.label :new_password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div><!--Password ended -->

    </div><!--col-md-8 ended -->

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <br/>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>

    <br/>
  <% end %>
</div>

<script type="text/javascript">
$(document).ready(function () {
  $(".personal").on('click', function (){
    $("#personal").removeClass("hidden");
    $("#social").addClass("hidden");
    $('#password').addClass("hidden");
    $('.list-group-item').each(function () {
      $(this).removeClass("active");
    });
    $('.personal').addClass("active");
  });
  $(".social").on('click', function (){
    $("#personal").addClass("hidden");
    $("#social").removeClass("hidden");
    $('#password').addClass("hidden");
    $('.list-group-item').each(function () {
      $(this).removeClass("active");
    });
    $('.social').addClass("active");
  });
  $(".password").on('click', function (){
    $("#personal").addClass("hidden");
    $("#social").addClass("hidden");
    $('#password').removeClass("hidden");
    $('.list-group-item').each(function () {
      $(this).removeClass("active");
    });
    $('.password').addClass("active");
  });
});
</script>

