<style type="text/css">
body{
  background-image: url(/assets/images/banner7.jpg) !important;
}

.navbar a{
  -webkit-transition: all 0.5s ease-out;
  -moz-transition: all 0.5s ease-out;
  -o-transition: all 0.5s ease-out;
  transition: all 0.5s ease-out;
}

.navbar a:hover{
  -webkit-transition: all 0.5s ease-out;
  -moz-transition: all 0.5s ease-out;
  -o-transition: all 0.5s ease-out;
  transition: all 0.5s ease-out;
}

#logo
{
  margin: 0 0 0 0 ;
  padding: 0 0 0 0 ;

}

#home
{
  position: relative;
  margin-top: 8%; 
  padding-left: 3%;
  padding-right: 3%; 

}

#register
{
  padding: 0 0 10px 0;
  width: 100%;
}

#register-btn
{
  width: 100%;
  line-height: 40px;
  font-size: 20px;
  color:black;
  border-color: black;

}

#register-form
{
  position: relative;
  top: -20px;
}

#navbar-custom
{
  background-color:#31403f;

}

.navbar-custom .navbar-nav > li > a {
  color: white;  
  font-size: 15px;
  padding-left: 20px;
  margin-right: 5px;
  letter-spacing: 1px;

}

.navbar-custom .navbar-nav > li > a:hover {
  color: white;
  font-weight: ;
  font-size: 15px;
  padding-left: 20px;
  margin-right: 5px;
  letter-spacing: 1px;
  background-color: black;
  box-shadow :2px 2px 20px lightgreen;
  border-radius: 80px;
}

.logo{
  margin-top: 10px;
  margin-bottom: 10px;
}

</style>

<body>

  <nav class="navbar navbar-custom navbar-fixed-top" id="navbar-custom">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>

        <a class="navbar-brand visible-lg" id="logo" href="#">
          <img src="/assets/images/logo.jpg" class="logo">
        </a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <br/>
        <div class="container center" style="margin-right: 0px;">

          <%= form_tag("/loginperson", method: "post", :class => "navbar-form navbar-right") do %>

          <%= text_field_tag(:email, "", :placeholder => "Email ID", :class => "form-control") %>

          <%= password_field_tag(:password, "", :placeholder => "Password", :class => "form-control") %>

          <%= submit_tag("Login", :class => "btn btn-success") %>

          <% end %>

        </div>

        <ul class="nav navbar-nav navbar-right ">
          <li class="active"><a href="#">Home</a></li>
          <li><a href="#">SAC</a></li>
          <li><a href="#">Guidelines</a></li>
          <li><a href="#">Testimonials</a></li>
          <li><a href="#">Contact Us</a></li>
        </ul>

      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <div  id="home">
    <div class="row">
      <div class="col-md-4" >
        <div style="position:relative">
          <img src="/assets/images/sac-logo.png" height="120px">
        </div>
        <div id="register-form">
          <h2 class="center" style="color: white; font-size:25px">
            Register Here
          </h2>
          <div class="input-group input-group-lg" id="register">

            <input type="text" class="form-control" placeholder="Enter your full name" style="border-radius: 0px;border-color:black" aria-describedby="sizing-addon1">
          </div>

          <div class="input-group input-group-lg" id="register">

            <input type="text" class="form-control" placeholder="Enter your email ID" style="border-radius: 0px;border-color:black" aria-describedby="sizing-addon1">
          </div>
          <div class="input-group input-group-lg" id="register">

            <input type="password" class="form-control" placeholder="Password" style="border-radius: 0px;border-color:black" aria-describedby="sizing-addon1">
          </div>
          <button type="button" class="btn btn-success btn-lg" id="register-btn">Register</button>
        </div>
      </div>

      <div class="col-md-8" style="padding-top:14px">
        <img src="/assets/images/det_pic.jpg" style="width: 100%; ">
      </div>
    </div>
  </div>
</body>